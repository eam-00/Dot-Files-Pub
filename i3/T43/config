  client.focused		#FFBF00		#FFBF00		#2E3440		#FFBF00		#FFBF00
  client.focused_inactive	#2E3440		#2E3440		#FFBF00		#2E3440		#2E3440
  client.unfocused		#2E3440		#2E3440		#FFBF00		#2E3440		#2E3440
  client.urgent			#FFBF00		#900000		#2E3440		#900000		#900000
  client.placeholder		#FFBF00		#FFBF00		#2E3440		#FFBF00		#FFBF00


